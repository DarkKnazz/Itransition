<div class="container-fluid">
  <div class="row header_Small_Page">
    Sign up
  </div>  
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="container confirm_Body" style="margin-top: 3%;">
    <div style="border: 1px solid lightgray; padding: 3%; border-radius: 2px;">
      <div class="row">
      <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
        <%= f.label :email %>
      </div>
      <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
        <%= f.email_field :email, autofocus: true, :class => "confirm_Email"%>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
        <%= f.label :password %>
      </div>
      <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
        <%= f.password_field :password, autocomplete: "off", :class => "confirm_Email"%>
      </div>
    </div><br>
    <div class="row">
      <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
        <%= f.label :password_confirmation %>
      </div>
      <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "confirm_Email"%>
      </div>
    </div><br>
    <%= f.submit "Sign up", :id => "button_Sign_Up", :class => "btn btn-facebook buttons"%><br><br>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
    </div>
  </div>
<% end %>